<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/firstpagebackground1"
    tools:context=".Timer">

    <ProgressBar
        android:id="@+id/ProgresBarID"
        style="?android:attr/progressBarStyle"
        android:layout_width="280dp"
        android:layout_height="318dp"
        android:autofillHints="#D48C23"
        android:backgroundTint="#D48C23"
        android:indeterminateTint="#D48C23"

        android:progressTint="#D48C23"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.379" />

    <EditText
        android:id="@+id/AddMinutesID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="124dp"
        android:backgroundTint="#D48C23"
        android:ems="10"
        android:hint="ADD MORE MINUTES"
        android:inputType="textPersonName"
        android:textColorHint="#D48C23"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/AddBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/button11"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/LeaveParkingBtn"
        android:layout_width="133dp"
        android:layout_height="55dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button11"
        android:text="Leave Parking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="259dp"
        android:layout_height="28dp"
        android:layout_marginTop="48dp"
        android:text="REMAINING TIME"
        android:textColor="#D48C23"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="191dp"
        android:layout_height="144dp"
        app:layout_constraintBottom_toBottomOf="@+id/ProgresBarID"
        app:layout_constraintEnd_toEndOf="@+id/ProgresBarID"
        app:layout_constraintStart_toStartOf="@+id/ProgresBarID"
        app:layout_constraintTop_toTopOf="@+id/ProgresBarID"
        app:srcCompat="@drawable/car1" />

    <TextView
        android:id="@+id/TimerID"
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:text="00:00"
        android:textColor="#D48C23"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProgresBarID"
        app:layout_constraintVertical_bias="0.096" />


</androidx.constraintlayout.widget.ConstraintLayout>